echo "Install Required Packages"
sudo apt update
echo "Install ca-cert"
sudo apt install ca-certificates curl
echo "Add Docker Repository"
echo "Set ownership permissions for the /etc/apt/keyrings directory:"
sudo install -m 755 -d /etc/apt/keyrings
echo "Download with key curl"
sudo curl -fsSL https://download.docker.com/linux/ubuntu/gpg -o /etc/apt/keyrings/docker.asc
echo "set read Permission"
sudo chmod a+r /etc/apt/keyrings/docker.asc
echo "Add the Docker repository to the list of APT sources:"
echo \
  "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.asc] https://download.docker.com/linux/ubuntu \
  $(. /etc/os-release && echo "$VERSION_CODENAME") stable" | \
  sudo tee /etc/apt/sources.list.d/docker.list > /dev/null
echo "Install Docker Compose Plugin"

echo "Update the repository list:"

sudo apt update

echo " Install Docker Compose:"
sudo apt install docker-compose-plugin -y

echo "After the download completes, confirm that Docker Compose is installed by typing:"
docker compose version



